<div class="container-fluid">
  <div class="row flex-items-xs-top">
    <div class="col-xs-1">
      <img class="circular" src="{{model.user.pictures.sizes.2.link}}" data-test="video-user-image">
    </div>
    <div class="col-xs-8">
      <h2 data-test="video-title">{{model.name}}</h2>
      <h5>
        <a href="{{model.user.link}}" data-test="video-user-name">{{model.user.name}}</a>
        <small class="text-muted" data-test="video-created">
          {{moment-format model.created_date 'MM-DD-YYYY' "YYYY-MM-DD"}} at {{model.created_time}}
        </small>
      </h5>
      <div data-test="video-description">
        <p>{{model.description}}</p>
      </div>
    </div>
    <div class="col-xs-3">
      {{#each categoryService.selectedCategories as |selectedCategory|}}
        <p>{{selectedCategory.name}}</p>
      {{/each}}
    </div>
  </div>
</div>
